<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="547.0" prefWidth="1108.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ApptMenuController">
   <children>
      <Label layoutX="637.0" layoutY="22.0" text="Select an option to filter your calendar:">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
      <Label layoutX="14.0" layoutY="10.0" text="Appointments">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      <TableView fx:id="appointmentsTable" layoutX="11.0" layoutY="93.0" prefHeight="385.0" prefWidth="1084.0">
        <columns>
          <TableColumn fx:id="appointmentIDColumn" prefWidth="105.0" text="Appointment ID" />
          <TableColumn fx:id="titleColumn" minWidth="0.0" prefWidth="78.0" text="Title" />
            <TableColumn fx:id="descriptionColumn" prefWidth="129.0" text="Description" />
            <TableColumn fx:id="locationColumn" prefWidth="103.0" text="Location" />
            <TableColumn fx:id="contactColumn" prefWidth="179.0" text="Contact" />
            <TableColumn fx:id="typeColumn" prefWidth="121.0" text="Type" />
            <TableColumn fx:id="startColumn" prefWidth="96.0" text="Start" />
            <TableColumn fx:id="endColumn" prefWidth="97.0" text="End" />
            <TableColumn fx:id="customerIDColumn" prefWidth="98.0" text="Customer_ID" />
            <TableColumn fx:id="userIDColumn" prefWidth="77.0" text="User_ID" />
        </columns>
      </TableView>
      <Label layoutX="14.0" layoutY="46.0" text="All appointments are shown by default. " />
      <RadioButton fx:id="byWeekBtn" layoutX="637.0" layoutY="49.0" mnemonicParsing="false" text="Appointments by Week">
         <toggleGroup>
            <ToggleGroup fx:id="filterApptToggle" />
         </toggleGroup>
      </RadioButton>
      <RadioButton fx:id="byMonthBtn" layoutX="793.0" layoutY="49.0" mnemonicParsing="false" text="Appointments by Month" toggleGroup="$filterApptToggle" />
      <Button fx:id="viewAllAppointments" layoutX="957.0" layoutY="45.0" mnemonicParsing="false" onAction="#clickViewAllAppointments" text="View All Appointments" />
      <Button fx:id="addAppointment" layoutX="14.0" layoutY="495.0" mnemonicParsing="false" onAction="#clickAddAppointment" text="Add Appointment">
         <font>
            <Font size="16.0" />
         </font>
      </Button>
      <Button fx:id="modAppointment" layoutX="176.0" layoutY="495.0" mnemonicParsing="false" onAction="#clickModAppointment" text="Modify Appointment">
         <font>
            <Font size="16.0" />
         </font>
      </Button>
      <Button fx:id="deleteAppointment" layoutX="357.0" layoutY="495.0" mnemonicParsing="false" onAction="#clickDeleteAppointment" text="Delete Appointment">
         <font>
            <Font size="16.0" />
         </font>
      </Button>
      <Button fx:id="mainMenuBtn" layoutX="992.0" layoutY="495.0" mnemonicParsing="false" onAction="#clickMainMenu" text="Main Menu">
         <font>
            <Font size="16.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
